<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:windowActionBar="false"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grad_two"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="myapps.myvolley.JourneyActivity"
    tools:showIn="@layout/activity_journey"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:text="@string/app_name"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:textColor="#ffffffff" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startString"
        android:id="@+id/startAddressTV"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startAddressET"
        android:background="@drawable/rounded_border"
        android:singleLine="true"
        android:text="@string/startAddressHint" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finishAddress"
        android:id="@+id/endAddressTV"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:id="@+id/endAddressET"
        android:singleLine="true"
        android:text="@string/startAddressHint" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addressBtnTxt"
        android:id="@+id/addressButton"
        android:background="@drawable/grad_two"
        android:gravity="center"
        android:layout_gravity="center"
        android:singleLine="true"
         />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@drawable/grad_two"
            android:paddingLeft="8dp"
            android:paddingTop="6dp"
            android:text="Distance in Kilometers"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/distanceTV"/>



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:gravity="center"
        android:id="@+id/latLongTV" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addToDatabase"
        android:background="@drawable/grad_two"
        android:id="@+id/addtoDatabase"
        android:gravity="center"
         />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Input Manually?"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/manualTV" />


</LinearLayout>
    </ScrollView>
