<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:windowActionBar="false"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grad_two"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="myapps.myvolley.TimeSheet"
    tools:showIn="@layout/activity_time_sheet"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:text="@string/app_name"
            android:id="@+id/textView2"
            android:textSize="30dp"
            android:textColor="#ffffffff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:text="@string/app_name"
            android:id="@+id/textView3"
            android:textSize="30dp"
            android:textColor="#ffffffff" />


        <TextView
        android:id="@+id/textViewBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="Basic Hours" />

    <EditText
        android:id="@+id/editTextBasic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_border"
        android:textStyle="bold"
        android:textSize="21sp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewOverTime"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Overtime Hours" />

    <EditText
        android:id="@+id/editTextOverTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_border"
        android:textStyle="bold"
        android:textSize="21sp"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/textViewMeals"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Meal Allowance" />

    <EditText
        android:id="@+id/editTextMeals"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_border"
        android:textStyle="bold"
        android:textSize="21sp"
        android:ems="10" >
    </EditText>



    <TextView
        android:id="@+id/textViewEmpID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="Employee ID" />




    <Button
        android:id="@+id/buttonAddToTimeSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_border"
        android:layout_marginTop="40dp"
        android:text="Add to Timesheet"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"/>

    <Button
        android:id="@+id/buttonViewTimeSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_border"
        android:text="View Daily Timesheets"
        android:layout_weight="0.50"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"/>



            <Button
                android:id="@+id/btnViewMileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="10dp"
                android:text="View Mileage Claims"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>
        <Button
            android:id="@+id/buttonViewWeeklySheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Weekly Timesheets"
            android:layout_weight="0.50"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>





</LinearLayout>
    </ScrollView>
