<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grad"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="@string/app_name"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textColor="#ffffffff" />

    <ImageButton
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:id="@+id/fuelButton"
        android:src="@drawable/petrol_64px"
        android:layout_weight="0.18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calculate Journey"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"/>

    <ImageButton
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:id="@+id/hoursButton"
        android:src="@drawable/hours_64"
        android:layout_weight="0.18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add Overtime"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"/>

    <ImageButton
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:id="@+id/expenseButton"
        android:src="@drawable/money_64"
        android:layout_weight="0.18" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add Expenses"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"/>

    <ImageButton
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:src="@drawable/hours_64"
        android:layout_weight="0.18" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Submit Timesheet"
        android:id="@+id/submitTv"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"/>








    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
